# Flask Production Template for AI Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# Flask Core Configuration
# ============================================================================

# Secret key for session management and CSRF protection
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Debug mode (set to False in production)
DEBUG=True

# Flask environment (development, testing, production)
FLASK_ENV=development

# ============================================================================
# Database Configuration
# ============================================================================

# Database URL (SQLite for development, PostgreSQL/MySQL for production)
DATABASE_URL=sqlite:///app.db

# Development database URL (optional)
DEV_DATABASE_URL=sqlite:///dev.db

# Test database URL (optional)
TEST_DATABASE_URL=sqlite:///:memory:

# ============================================================================
# JWT Configuration
# ============================================================================

# JWT secret key (should be different from SECRET_KEY)
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT token expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600

# ============================================================================
# Cache Configuration
# ============================================================================

# Redis URL for caching (leave empty to use simple in-memory cache)
REDIS_URL=redis://localhost:6379/0

# Cache default timeout (in seconds)
CACHE_DEFAULT_TIMEOUT=300

# ============================================================================
# ML Model Configuration
# ============================================================================

# Path to ML models directory
ML_MODEL_PATH=models/

# Model cache TTL (in seconds)
ML_MODEL_CACHE_TTL=3600

# ML batch processing size
ML_BATCH_SIZE=32

# Maximum number of ML workers
ML_MAX_WORKERS=4

# Enable automatic service discovery
ML_AUTO_DISCOVER_SERVICES=True

# ============================================================================
# API Configuration
# ============================================================================

# API rate limiting
API_RATE_LIMIT=100 per hour

# API version
API_VERSION=v2

# Enable API documentation
API_DOCS_ENABLED=True

# ============================================================================
# File Upload Configuration
# ============================================================================

# Upload folder path
UPLOAD_FOLDER=uploads/

# Maximum file size (in bytes)
MAX_CONTENT_LENGTH=16777216

# Allowed file extensions
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,csv,json

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# Enable structured logging
STRUCTURED_LOGGING=True

# ============================================================================
# Security Configuration
# ============================================================================

# Enable security headers
SECURITY_HEADERS_ENABLED=True

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Enable HTTPS redirect in production
FORCE_HTTPS=False

# ============================================================================
# External Services Configuration
# ============================================================================

# Email configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Monitoring and analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ============================================================================
# Development Tools Configuration
# ============================================================================

# Enable Flask debug toolbar
DEBUG_TOOLBAR_ENABLED=True

# Enable SQL query logging
SQL_QUERY_LOGGING=False

# Enable performance profiling
PROFILING_ENABLED=False

# ============================================================================
# Testing Configuration
# ============================================================================

# Test database URL
TEST_DATABASE_URL=sqlite:///:memory:

# Disable CSRF for testing
WTF_CSRF_ENABLED=False

# ============================================================================
# Production Configuration
# ============================================================================

# Production database URL (PostgreSQL recommended)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Production Redis URL
# REDIS_URL=redis://localhost:6379/0

# Production secret keys (generate secure keys)
# SECRET_KEY=your-production-secret-key
# JWT_SECRET_KEY=your-production-jwt-secret

# Production logging
# LOG_LEVEL=WARNING
# SENTRY_DSN=your-sentry-dsn

# Production security
# FORCE_HTTPS=True
# CORS_ORIGINS=https://yourdomain.com